{
  "manifest_version": 3,
  "name": "Macro Extension",
  "version": "1.0.0",
  "description": "Chat với Gemini AI cho văn bản được chọn",
  "permissions": ["contextMenus", "activeTab", "storage"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["product/content.js"],
      "css": ["styles.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Macro Extension"
  },
  "icons": {
    "16": "src/images/logo-16.png",
    "32": "src/images/logo-32.png",
    "48": "src/images/logo-48.png",
    "128": "src/images/logo-128.png"
  },
  "host_permissions": ["https://generativelanguage.googleapis.com/*"],
  "background": {
    "service_worker": "product/background.js"
  }
}
